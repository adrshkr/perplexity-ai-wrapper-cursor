# Perplexity AI Wrapper - Environment Variables
# Copy this file to .env and fill in your values

# Perplexity API Configuration
PERPLEXITY_BASE_URL=https://www.perplexity.ai
PERPLEXITY_SESSION_TOKEN=your_session_token_here

# Browser Configuration (for cookie extraction)
CHROME_USER_DATA_DIR=C:\Users\YourUsername\AppData\Local\Google\Chrome\User Data
FIREFOX_PROFILE_DIR=C:\Users\YourUsername\AppData\Roaming\Mozilla\Firefox\Profiles
EDGE_USER_DATA_DIR=C:\Users\YourUsername\AppData\Local\Microsoft\Edge\User Data

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/perplexity_wrapper.log

# Cookie Storage
COOKIE_STORAGE_PATH=cookies.json

# Emailnator Configuration (for account generation - optional)
EMAILNATOR_BASE_URL=https://www.emailnator.com
EMAILNATOR_COOKIES_PATH=emailnator_cookies.json

# Proxy Configuration (optional)
HTTP_PROXY=
HTTPS_PROXY=

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_PERIOD=60

# Timeout Settings
REQUEST_TIMEOUT=30
CONNECTION_TIMEOUT=10

# Debug Mode
DEBUG=false
